{
  "manifest_version": 3,
  "name": "Mailto: for Gmail™",
  "description": "Makes mailto: links open a Gmail™ compose window.\nNothing more, nothing less.",
  "version": "3.0",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "permissions": [
    "offscreen",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "mtgm.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
